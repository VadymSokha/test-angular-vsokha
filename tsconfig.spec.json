{
  "extends": "./tsconfig.json",
  "compilerOptions": {
	"emitDecoratorMetadata": true ,
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node"
    ]
  },
  "files": [
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/setup-jest.ts",
    "**/*.spec.ts",
    "./app/auto-spy.ts"
  ]
}
